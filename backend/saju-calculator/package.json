    "대운",
    "세운",
    "오행",
    "십성",
    "korean-fortune",
    "saju",
    "four-pillars",
    "bazi",
    "chinese-astrology"
  ],
  "author": "SajuApp",
  "license": "MIT",
  "dependencies": {
    "korean-lunar-calendar": "^0.3.6"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/saju-calculator"
  },
  "engines": {
    "node": ">=16.0.0"
  }
